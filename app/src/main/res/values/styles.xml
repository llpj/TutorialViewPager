<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="vpiCirclePageIndicatorStyle">@style/AppTheme.CirclePageIndicator</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.CirclePageIndicator">
        <item name="fillColor">#A0FFFFFF</item>
        <item name="pageColor">#20000000</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">6dp</item>
        <item name="centered">true</item>
        <item name="snap">true</item>
    </style>

</resources>
